    "components": {
        "schemas": {
            "login": {
                "description": "la contrase単a debe tener al menos 7 caracteres, al igual que el username",
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "Sunnyhhsss"
                    },
                    "email": {
                        "type": "string",
                        "example": "sunnysshhsss@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "1234567"
                    }
                }
            },
            "updateUser": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "Sunny_lady"
                    }
                }
            },
            "updateAvatar": {
                "type": "object",
                "properties": {
                    "avatar": {
                        "type": "string",
                        "example": "photo3.png"
                    }
                }
            },
            "loguearse": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "sunnyskss@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "1234567"
                    }
                }
            },
            "createProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Lampara"
                    },
                    "description": {
                        "type": "string",
                        "example": "La mejor lampara de tu vida"
                    },
                    "price": {
                        "type": "float",
                        "example": 10
                    },
                    "availableQty": {
                        "type": "integer",
                        "example": 18
                    },
                    "status": {
                        "type": "boolean",
                        "example": true
                    },
                    "userId": {
                        "type": "integer",
                        "example": 2
                    },
                    "productImage": {
                        "type": "string",
                        "example": "https://m.media-amazon.com/images/I/41MpZAXNOTS._SL500_.jpg"
                    }
                }
            },
            "updateProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Lampara"
                    },
                    "description": {
                        "type": "string",
                        "example": "La mejor lampara de tu vida"
                    },
                    "availableQty": {
                        "type": "integer",
                        "example": 18
                    },
                    "status": {
                        "type": "boolean",
                        "example": true
                    },
                    "productImage": {
                        "type": "string",
                        "example": "https://m.media-amazon.com/images/I/41MpZAXNOTS._SL500_.jpg"
                    }
                }
            },
            "createOrders": {
                "type": "object",
                "properties": {
                    "usersId": {
                        "type": "integer",
                        "example": 2
                    },
                    "status": {
                        "type": "boolean",
                        "example": true
                    }
                }
            },
            "addOrder": {
                "type": "object",
                "properties": {
                    "orderId": {
                        "type": "integer",
                        "example": 2
                    },
                    "productId": {
                        "type": "integer",
                        "example": 4
                    },
                    "quantity": {
                        "type": "integer",
                        "example": 6
                    },
                    "price": {
                        "type": "integer",
                        "example": 10
                    },
                    "status": {
                        "type": "boolean",
                        "example": true
                    }
                }
            },
            "createCar": {
                "type": "object",
                "properties": {
                    "idUser": {
                        "type": "integer",
                        "example": 1
                    }
                }
            },
            "addCar": {
                "type":"object",
                "properties":{
                    "carId": {
                        "type":"integer",
                        "example": 1
                    },
                    "productsId": {
                        "type":"integer",
                        "example": 4
                    },
                    "quantity":{
                        "type":"integer",
                        "example": 6
                    },
                    "price": {
                        "type":"float",
                        "example": 10
                    },
                    "status": {
                        "type":"boolean",
                        "example": true
                    }
                }
            }
        }
    }
